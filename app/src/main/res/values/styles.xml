        <item name="android:background">@color/fourth</item>
        <item name="itemIconTint">@color/bottom_nav_item_text_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_text_color</item>
        <item name="itemActiveIndicatorStyle">@style/BottomNavIndicatorGone</item>
        <item name="itemTextAppearanceActiveBoldEnabled">true</item>
        <item name="labelVisibilityMode">labeled</item>

    </style>

    <style name="BottomNavIndicatorGone" parent="">
        <item name="android:drawable">@android:color/transparent</item>
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>
